<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="0dp"
    android:background="@color/card_light_gray">

    <LinearLayout
        android:id="@+id/row_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <ImageView
            android:id="@+id/iv_circle"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/circle_unchecked"
            android:contentDescription="circle"/>

        <TextView
            android:id="@+id/tv_allergen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Alergen"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_teal"/>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@android:color/holo_red_dark"
            android:contentDescription="UsuÅ„"
            android:visibility="gone"
            android:layout_marginStart="8dp"/>

        <CheckBox
            android:id="@+id/cb_allergen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
