<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardHistory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- IKONA PRODUKTU -->
        <ImageView
            android:id="@+id/ivProductIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_icon_circle_teal"
            android:padding="12dp"
            android:src="@drawable/ic_product"
            android:contentDescription="Ikona produktu" />

        <!-- INFORMACJE O PRODUKCIE -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHistoryProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chleb pszenny"
                android:textColor="#0D4D4D"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHistoryAllergens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Gluten\nLaktoza"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>